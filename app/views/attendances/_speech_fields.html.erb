<%= m.fields_for :speeches, current_speech(meeting) do |speech_fields| %>

  Speech Title: <%= speech_fields.text_field :title, :class => "speech-title span5" %>

  <br />

  Manual: <%= collection_select :manual, :id, Manual.all, :id, :name,
                                { :selected => manual_select(meeting).id }, :class => "manual-select" %>

  Project: <%= speech_fields.collection_select :project_id,
                                               project_select(meeting),
                                               :id, :name,
                                               {},
                                               :class => "project-select" %>

  <%= speech_fields.hidden_field :user_id, :value => current_user.id %>
<% end %>