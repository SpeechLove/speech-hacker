<div class="page-header">
  <h1>Meeting Roles</h1>
</div>

<table class="table table-hover" id="meeting_roles_table">
  <thead>
    <tr>
      <th>Role Title</th>
      <% if current_user && current_user.super_admin? %>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @meeting_roles.each do |meeting_role| %>
      <%= render meeting_role %>
    <% end %>
  </tbody>
</table>

<div id="new_role_button">
  <%= button_to 'Create New Role', new_meeting_role_path, :class => 'btn btn-primary',
                :method => :get, :remote => true %>
</div>