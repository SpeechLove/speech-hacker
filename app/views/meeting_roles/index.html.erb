<h1> Meeting Roles </h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <% if current_user && current_user.super_admin? %>
        <th> Edit </th>
        <th> Description </th>
        <th> Delete </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @meeting_roles.each do |meeting_role| %>
    <tr>
      <td><%= link_to meeting_role.title, meeting_role_path(meeting_role) %></td>
      <td><%= link_to "Edit", edit_meeting_role_path(meeting_role) %></td>
      <td><%= meeting_role.description %></td>
      <td><%= link_to "Destroy", meeting_role_path(meeting_role), :method => :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= button_to('Create New Role', new_meeting_role_path, :class => 'btn btn-primary', :method => :get) %>