<table class="table table-hover">
  <thead>
    <tr>
      <th>Meeting</th>
      <th>Start time</th>
      <th>Location</th>
      <th>Description</th>

      <% if user_signed_in? and (can? :update, @meeting) %>
        <th>
          <%="Edit"%>
        </th>
        <% end %>
      <% if user_signed_in? %>
        <th>Attending?</th>
        <th>Meeting Role</th>
        <th><%= cancel_meeting_header(@meeting) %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
    <tr>
      <td>
        <%= link_to meeting.formatted_full_date, meeting_path(meeting) %>
      </td>

      <td>
        <%= meeting.meeting_time %>
      </td>

      <td>
        <%= meeting.location %>
      </td>

      <td>
        <%= meeting_description(meeting) %>
      </td>

      <td>
        <%= edit_meeting_link(meeting) %>
      </td>

      <% if user_signed_in? %>
        <td>
          <%= current_user.attending?(meeting) ? "Yes" : "No" %>
        </td>

        <td>
          <%= current_user.meeting_role(meeting).title if current_user.responded_to?(meeting) %>
        </td>
        <td>
          <%= cancel_meeting_link(meeting) %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>